<section class="product-highlights" id="product-highlights-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">{{ section.settings.title | default: "Most Trending Products" }}</h2>
      {% if section.settings.description != blank %}
        <p class="section-description">{{ section.settings.description }}</p>
      {% endif %}
    </div>
    
    {% assign featured_product = section.settings.product %}
    
    {% if featured_product %}
      <div class="quick-buy-panel">
        <div class="quick-buy-media">
          <img 
            id="quick-buy-product-image"
            src="{{ featured_product.featured_image | image_url: width: 800 }}" 
            alt="{{ featured_product.title }}"
            loading="lazy"
          >
        </div>
        
        <div class="quick-buy-content">
          <h3 class="product-title">{{ featured_product.title }}</h3>
          
          <div class="product-price">
            <span class="current-price">{{ featured_product.price | money }}</span>
            {% if featured_product.compare_at_price > featured_product.price %}
              <span class="compare-price">{{ featured_product.compare_at_price | money }}</span>
            {% endif %}
          </div>
          
          <form action="/cart/add" method="post" enctype="multipart/form-data" id="quick-buy-form">
            <input type="hidden" name="id" id="selected-variant-id" value="{{ featured_product.selected_or_first_available_variant.id }}">
            
            {% if featured_product.options_with_values.size > 0 %}
              {% for option in featured_product.options_with_values %}
                <div class="product-option">
                  <label class="option-label">{{ option.name }}</label>
                  
                  {% if option.name == 'Color' %}
                    <div class="color-swatches">
                      {% for value in option.values %}
                        <button 
                          type="button"
                          class="color-swatch {% if forloop.first %}active{% endif %}"
                          data-color="{{ value }}"
                          data-option-name="{{ option.name }}"
                          data-option-value="{{ value }}"
                          style="background-color: {{ value | downcase | replace: ' ', '-' }}"
                        >
                          <span class="sr-only">{{ value }}</span>
                        </button>
                      {% endfor %}
                    </div>
                  {% else %}
                    <div class="size-options">
                      {% for value in option.values %}
                        <button 
                          type="button"
                          class="size-option {% if forloop.first %}active{% endif %}"
                          data-option-name="{{ option.name }}"
                          data-option-value="{{ value }}"
                        >
                          {{ value }}
                        </button>
                      {% endfor %}
                    </div>
                  {% endif %}
                </div>
              {% endfor %}
            {% endif %}
            
            <div class="quick-buy-actions">
              <button type="submit" class="btn btn-primary" id="add-to-cart-btn">
                Add to Cart
              </button>
            </div>
            
            <div class="quick-buy-availability" id="availability-message">
              <span class="availability-text">In Stock</span>
            </div>
          </form>
        </div>
      </div>
    {% else %}
      <p>Please select a product in theme settings.</p>
    {% endif %}
  </div>
</section>

